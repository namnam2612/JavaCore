<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/mvc https://www.springframework.org/schema/mvc/spring-mvc.xsd">
    <!-- Cấu hình component-scan để Spring tìm kiếm các controller -->
    <context:component-scan base-package="vn.com.t3h.controller" />

    <!-- Cấu hình view resolver để hiển thị JSP
    - chi dinh cho spring biet cac folder jsp dang duoc nam o folder vat ly nao
    prefix: cac file co duogn dan bat dau tu /WEB_INF/views
    suffix: cac file co duoi ket thuc la.jsp
    -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/" />
        <property name="suffix" value=".jsp" />
    </bean>

   <!-- chi dinh cho spring biet cac folder chua file static dang nam o dau
    maooing duong dan /static tu file jsp den folder static vat ly> -->
    <mvc:resources mapping="/static/**" location="/static/"/>

    <!-- dang ky cac mapping cho servlet -->
    <mvc:annotation-driven/>
</beans>